<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ecole.application_scolaire.Dashboard.DocumentController">

    <!-- Select Student -->
    <Label layoutX="20" layoutY="70" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Sélectionnez un étudiant :" />
    <ComboBox fx:id="studentComboBox" layoutX="20" layoutY="100" prefWidth="200" />

    <!-- Carte Étudiant Section -->
    <Button layoutX="20" layoutY="150" onAction="#handleGenerateStudentCardPdf" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Générer Carte Étudiant PDF" />
    <Button layoutX="23.0" layoutY="183.0" onAction="#handleGenerateAttestation" prefHeight="25.0" prefWidth="161.0" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Generer Attestation" />

    <!-- Timetable Section -->
    <!-- Timetable Section -->
    <Label layoutX="20" layoutY="220" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Sélectionnez une semaine :" />
    <ComboBox fx:id="weekComboBox" layoutX="20" layoutY="250" prefWidth="200" />
    <Button layoutX="20" layoutY="300" onAction="#handleGenerateTimetablePdf" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Générer Emploi du Temps PDF" />


    <Button text="Générer Relevé de Notes PDF"
            onAction="#handleGenerateGradesPdf"
            layoutX="20" layoutY="350"
            style="-fx-background-color: #2196F3; -fx-text-fill: white;" />


</AnchorPane>
