<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ecole.application_scolaire.Dashboard.DocumentController"
            prefHeight="600.0" prefWidth="600.0">

    <!-- Carte Étudiant Section -->
    <Label text="Pour générer un PDF de votre carte étudiant :"
           layoutX="20" layoutY="50"
           style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <Button text="Générer Carte Étudiant PDF"
            onAction="#handleGeneratePdf"
            layoutX="20" layoutY="80"
            style="-fx-background-color: #2196F3; -fx-text-fill: white;" />

    <!-- Emploi du Temps Section -->
    <Label text="Pour générer un PDF de votre emploi du temps :"
           layoutX="20" layoutY="150"
           style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <Button text="Générer Timetable PDF"
            onAction="#handleGenerateTimetablePdf"
            layoutX="20" layoutY="180"
            style="-fx-background-color: #2196F3; -fx-text-fill: white;" />

    <Label text="Pour générer un PDF de votre relevé de notes :"
           layoutX="20" layoutY="250"
           style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <Button text="Générer Relevé de Notes PDF"
            onAction="#handleGenerateRelevePdf"
            layoutX="20" layoutY="280"
            style="-fx-background-color: #2196F3; -fx-text-fill: white;" />

</AnchorPane>
