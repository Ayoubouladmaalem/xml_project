<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ecole.application_scolaire.Dashboard.DocumentController"
            prefHeight="600.0" prefWidth="600.0">

    <!-- Select Student -->
    <Label text="Sélectionnez un étudiant :"
           layoutX="20" layoutY="70"
           style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <ComboBox fx:id="studentComboBox"
              layoutX="20" layoutY="100"
              prefWidth="200" />

    <!-- Carte Étudiant Section -->
    <Button text="Générer Carte Étudiant PDF"
            onAction="#handleGenerateStudentCardPdf"
            layoutX="20" layoutY="150"
            style="-fx-background-color: #2196F3; -fx-text-fill: white;" />

    <!-- Timetable Section -->
    <Label text="Sélectionnez une semaine :"
           layoutX="20" layoutY="220"
           style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <ComboBox fx:id="weekComboBox"
              layoutX="20" layoutY="250"
              prefWidth="200" />
    <Button text="Générer Emploi du Temps PDF"
            onAction="#handleGenerateTimetablePdf"
            layoutX="20" layoutY="300"
            style="-fx-background-color: #2196F3; -fx-text-fill: white;" />

    <Button text="Générer Relevé de Notes PDF"
            onAction="#handleGenerateGradesPdf"
            layoutX="20" layoutY="350"
            style="-fx-background-color: #2196F3; -fx-text-fill: white;" />


</AnchorPane>
