<?xml version="1.0" encoding="UTF-8"?>

<!--
  Minimal UI to demonstrate the ConversionController usage.
  Adjust as needed.
-->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ecole.application_scolaire.Dashboard.ConversionController"
            prefWidth="600" prefHeight="400">
    <stylesheets>
        <URL value="@../css/conversion.css"/>
    </stylesheets>

    <children>
        <!-- "Upload" button -->
        <Button fx:id="uploadButton"
                layoutX="50" layoutY="50"
                text="Upload Excel"
                onAction="#handleUploadButton"
                styleClass="action-button"/>

        <!-- "Convert & View" button -->
        <Button fx:id="convertAndViewButton"
                layoutX="50" layoutY="100"
                text="Convert  View"
                onAction="#handleConvertAndViewButton"
                styleClass="action-button"/>

        <!-- "View XML" button -->
        <Button fx:id="viewXmlButton"
                layoutX="50" layoutY="150"
                text="View XML"
                onAction="#handleViewXmlButton"/>

        <!-- A label to show status messages -->
        <Label fx:id="statusLabel"
               layoutX="50" layoutY="200"
               text="Status: ..."
               styleClass="status-label"/>

        <!-- Some Text placeholders -->
        <Text fx:id="textBeforeUpload"
              layoutX="50" layoutY="270"
              text="Text before upload..."
              styleClass="info-text"/>

        <Text fx:id="contentText"
              layoutX="50" layoutY="300"
              text="Content text here..."/>
    </children>
</AnchorPane>