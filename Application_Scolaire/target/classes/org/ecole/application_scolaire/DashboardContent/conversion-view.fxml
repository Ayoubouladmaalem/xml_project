<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ecole.application_scolaire.Dashboard.ConversionController"
            prefHeight="400.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@../css/conversion.css"/>
    </stylesheets>

    <!-- Title or Content Text -->
    <Text fx:id="contentText" layoutX="20.0" layoutY="100.0" />


    <!-- Button to convert and view Excel file -->
    <Button fx:id="convertAndViewButton" text="Convertir le fichier excel Students_GInf2"
            layoutX="20.0" layoutY="120.0" onAction="#handleConvertAndViewButton" styleClass="action-button" />

    <!-- Text before Upload Button -->
    <Text fx:id="textBeforeUpload" layoutX="20.0" layoutY="230.0" text="Upload le fichier excel Ã  convertir: " styleClass="info-text"/>

    <!-- Button to upload Excel File -->
    <Button fx:id="uploadButton"
            layoutX="20.0" layoutY="250.0" text="Upload le fichier excel "
            onAction="#handleUploadButton" styleClass="action-button" />

    <!-- Button to view XML File -->
    <Button fx:id="viewXmlButton" layoutX="20.0" layoutY="320.0" text="Voir fichier XML"
            onAction="#handleViewXmlButton" styleClass="action-button" />

    <!-- Status Label -->
    <Label fx:id="statusLabel" layoutX="20.0" layoutY="370.0" text="Status: Attend pour upload..." styleClass="status-label" />
</AnchorPane>
